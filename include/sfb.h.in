// Define macros for version numbers
#ifndef SFB_H
#define SFB_H
#include <string>

using namespace std;

#define SFB_VERSION_MAJOR @SFB_VERSION_MAJOR@
#define SFB_VERSION_MINOR @SFB_VERSION_MINOR@
#define SFB_VERSION_PATCH @SFB_VERSION_PATCH@
#define SFB_VERSION @SFB_VERSION@

enum COMMANDS {
	CMD_NONE,
	CMD_HELP,
	CMD_START,
	CMD_COPY,
	CMD_MOVE,
	CMD_LS,
	CMD_LA,
	CMD_CD,
	CMD_PWD
};

// Request packet structure
typedef struct {
	COMMANDS	cmd;
	string		path0;
	string		path1;
} REQ_PACKET;

// Answer packet structure
typedef struct {
	COMMANDS	cmd;
	fstream*	file;
	bool		success;
} ANS_PACKET;

#endif /* SFB_H */
